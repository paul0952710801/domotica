{
  "NODE_ENV": "development",
  "TZ": "UTC",

  "port": 3000,
  "database": {
    "development": "localhost:27017/domotica",
    "required": true
  },
  "sessionSecret": {
    "development": "domotica",
    "required": true
  },
  "sessionKeyField": "_key",
  "gzip": true,
  "pageSize": 10,
  "limit": 100,

  "maxSessionLength": {
    "type": "function",
    "default": "60 * 60 * 1000"
  },
  "maxExtendedSessionLength": {
    "type": "function",
    "default": "30 * 24 * this.maxSessionLength"
  },

  "logLevel": {
    "production": 1,
    "default": 2
  }
}
